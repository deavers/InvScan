<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment">



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/scanrealtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scanbuttons"
        android:text="В реальном времени (Beta)"
        android:layout_marginBottom="60dp"
        android:textAllCaps="false"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/scanerbycapimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scanbuttons"
        android:text="По фото или галереи"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textAllCaps="false"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/scanrealtime"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>