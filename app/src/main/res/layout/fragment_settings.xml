<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment">

    <ImageView
        android:id="@+id/imagetodetect"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_margin="20dp"
        android:background="@drawable/ic_camera"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resulttextsett"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="%Результат%"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scanbycapture"
        app:layout_constraintTop_toBottomOf="@+id/imagetodetect" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/scanrealtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scanbuttons"
        android:text="Сканер в реальном времени (Beta)"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/scanbyimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scanbuttons"
        android:text="Сканер по галерии"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textAllCaps="false"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/scanrealtime"

        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/scanbycapture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scanbuttons"
        app:layout_constraintBottom_toTopOf="@+id/scanbyimage"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Сканер по фото"
        android:textAllCaps="false"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="20dp" />



</androidx.constraintlayout.widget.ConstraintLayout>